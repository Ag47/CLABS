<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100px"
                android:text="Hotel Facilities"
                android:textColor="@color/white"
                android:textSize="28px" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer_layout"
        android:layout_below="@id/tool_bar"
        android:background="#B1A16D">

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="30px"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/fitness_layout"
                android:layout_width="match_parent"
                android:layout_height="210px"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:background="@drawable/fitness">

                <TextView
                    android:id="@+id/health_title"
                    android:layout_width="295px"
                    android:layout_height="60px"
                    android:layout_marginTop="50px"
                    android:background="#CC755324"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text="Health And\nFitness Center"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:layout_below="@id/health_title"
                    android:layout_marginTop="30px"
                    android:background="#4C000000"
                    android:paddingLeft="15px"
                    android:text="opens 24 hours daily\t\tno additional cost"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spa_layout"
                android:layout_width="match_parent"
                android:layout_height="210px"
                android:layout_below="@id/fitness_layout"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:background="@drawable/spa">

                <TextView
                    android:id="@+id/spa_title"
                    android:layout_width="295px"
                    android:layout_height="60px"
                    android:layout_marginTop="50px"
                    android:background="#CC755324"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text="Spa Facilities"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:layout_below="@id/spa_title"
                    android:layout_marginTop="30px"
                    android:background="#4C000000"
                    android:paddingLeft="15px"
                    android:text="opens 24 hours daily\t\t\tsee the price"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/swimming_layout"
                android:layout_width="match_parent"
                android:layout_height="210px"
                android:layout_below="@id/spa_layout"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:background="@drawable/swimming_pool">

                <TextView
                    android:id="@+id/swimming_title"
                    android:layout_width="295px"
                    android:layout_height="60px"
                    android:layout_marginTop="50px"
                    android:background="#CC755324"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text="Outdoor\nSwimming Pool"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:layout_below="@id/swimming_title"
                    android:layout_marginTop="30px"
                    android:background="#4C000000"
                    android:paddingLeft="15px"
                    android:text="opens 24 hours daily\t\tno additional cost"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/restaurant_layout"
                android:layout_width="match_parent"
                android:layout_height="210px"
                android:layout_below="@id/swimming_layout"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:layout_marginTop="30px"
                android:background="@drawable/restaurant">

                <TextView
                    android:id="@+id/restaurant_title"
                    android:layout_width="295px"
                    android:layout_height="60px"
                    android:layout_marginTop="50px"
                    android:background="#CC755324"
                    android:gravity="center_vertical"
                    android:paddingLeft="15px"
                    android:text="Restaurant"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:layout_below="@id/restaurant_title"
                    android:layout_marginTop="30px"
                    android:background="#4C000000"
                    android:paddingLeft="15px"
                    android:text="opens 24 hours daily\t\t\tsee the price"
                    android:textColor="@color/white" />

            </RelativeLayout>
        </RelativeLayout>


    </ScrollView>


    <RelativeLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_color">

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:text="InterContinental"
            android:textColor="@color/white"
            android:textSize="25px" />

        <TextView
            android:id="@+id/room_number"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25px"
            android:text="Room 1001"
            android:textColor="@color/white"
            android:textSize="25px" />

    </RelativeLayout>

</RelativeLayout>
