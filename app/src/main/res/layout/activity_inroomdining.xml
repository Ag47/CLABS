<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100px"
                android:text="Room Service"
                android:textColor="@color/white"
                android:textSize="28px" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:src="@drawable/roomservice_banner"
        android:layout_below="@+id/tool_bar"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/inRoomDining"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@id/banner"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px"
        android:background="#B1A16D"
        android:gravity="center"
        android:text="In room dining"
        android:textColor="@color/white"
        android:textSize="25px" />

    <TextView
        android:id="@+id/houseKeeping"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@id/inRoomDining"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px"
        android:background="#B1A16D"
        android:gravity="center"
        android:text="Housekeeping"
        android:textColor="@color/white"
        android:textSize="25px" />

    <TextView
        android:id="@+id/miscellaneous"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@id/houseKeeping"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50px"
        android:layout_marginTop="20px"
        android:background="#B1A16D"
        android:gravity="center"
        android:text="miscellaneous"
        android:textColor="@color/white"
        android:textSize="25px" />


    <RelativeLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_color">

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:text="InterContinental"
            android:textColor="@color/white"
            android:textSize="25px" />

        <TextView
            android:id="@+id/room_number"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25px"
            android:text="Room 1001"
            android:textColor="@color/white"
            android:textSize="25px" />

    </RelativeLayout>

</RelativeLayout>
