<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#B1A16D"
    >

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100px"
                android:text="My Booking"
                android:textColor="@color/white"
                android:textSize="28px" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:id="@+id/add_card"
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:layout_below="@id/tool_bar"
        android:layout_margin="5px"
        android:elevation="30px"
        android:padding="5px"
        >

        <ImageView
            android:layout_width="50px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10px"
            android:src="@drawable/ic_add" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="New Booking" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:layout_below="@id/add_card"
        android:layout_margin="5px"
        android:elevation="30px"
        android:padding="5px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="5px"
                android:gravity="center"
                android:text="Sep"
                android:textSize="20px" />

            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/month"
                android:layout_marginLeft="10px"
                android:text="17"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_toRightOf="@id/day"
                android:src="@drawable/line2" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@id/line1"
                android:text="SPOON by Alain Ducasse"
                android:textColor="#B1A16D"
                android:textSize="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@id/line1"
                android:text="7:00 pm"
                android:textColor="#CC755324" />

            <TextView
                android:id="@+id/manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10px"
                android:layout_marginTop="20px"
                android:gravity="center_vertical"
                android:text="Manage"
                android:textSize="20px" />

            <ImageView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@id/manage"
                android:src="@drawable/line2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5px"
                android:layout_toLeftOf="@id/line2"
                android:text="Lobbby level"
                android:textSize="20px" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="75px"
        android:layout_below="@id/card1"
        android:layout_margin="5px"
        android:elevation="30px"
        android:padding="5px">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/month2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginTop="5px"
                android:gravity="center"
                android:text="Sep"
                android:textSize="20px" />

            <TextView
                android:id="@+id/day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/month2"
                android:layout_marginLeft="10px"
                android:text="17"
                android:textSize="30px" />

            <ImageView
                android:id="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_toRightOf="@id/day2"
                android:src="@drawable/line2" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@id/line3"
                android:text="SPOON by Alain Ducasse"
                android:textColor="#B1A16D"
                android:textSize="20px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title2"
                android:layout_marginTop="5px"
                android:layout_toRightOf="@id/line3"
                android:text="7:00 pm"
                android:textColor="#CC755324" />

            <TextView
                android:id="@+id/manage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10px"
                android:layout_marginTop="20px"
                android:text="Manage"
                android:textSize="20px" />

            <ImageView
                android:id="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="60px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_toLeftOf="@id/manage2"
                android:src="@drawable/line2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title2"
                android:layout_marginTop="5px"
                android:layout_toLeftOf="@id/line4"
                android:text="Lobbby level"
                android:textSize="20px" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_color">

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:text="InterContinental"
            android:textColor="@color/white"
            android:textSize="25px" />

        <TextView
            android:id="@+id/room_number"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25px"
            android:text="Room 1001"
            android:textColor="@color/white"
            android:textSize="25px" />

    </RelativeLayout>

</RelativeLayout>
