<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <LinearLayout
        android:id="@+id/myInfoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_bar"
        android:orientation="vertical"
        android:padding="10px">

        <TextView
            android:id="@+id/room_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room No. : 1001"
            android:textSize="30px" />

        <TextView
            android:id="@+id/guest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guest Name: Da Nana Wong"
            android:textSize="30px" />

        <TextView
            android:id="@+id/checkin_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in date: Tuesday 16 June 2015"
            android:textSize="30px" />

        <TextView
            android:id="@+id/checkin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-in Time: 3:35 PM (HKT)"
            android:textSize="30px" />

        <TextView
            android:id="@+id/checkout_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check-out date: Tuesday 16 June 2015"
            android:textSize="30px" />

        <TextView
            android:id="@+id/checkout_before"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please check out before 2:00 PM"
            android:textSize="30px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Card No. : 5529-4203-5061-5465"
            android:textSize="30px" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30px"
        android:background="@drawable/button_bg"
        android:clickable="true"
        android:padding="10px"
        android:text="My E-billing"
        android:textSize="45px" />

    <RelativeLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_alignParentBottom="true"
        android:background="@color/theme_color">

        <TextView
            android:id="@+id/hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:text="InterContinental"
            android:textColor="@color/white"
            android:textSize="25px" />

        <TextView
            android:id="@+id/room_number"
            android:layout_width="wrap_content"
            android:layout_height="25px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25px"
            android:text="Room 1001"
            android:textColor="@color/white"
            android:textSize="25px" />

    </RelativeLayout>

</RelativeLayout>
